<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane prefHeight="900.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pass.keep.controllers.WelcomeController">
    <bottom>
        <Button fx:id="nextSceneButton" mnemonicParsing="false" onAction="#openNextScene" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="50.0" top="25.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
    <center>
        <VBox alignment="CENTER">
            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Password Keeper helps you store your credentials in a safe manner!">
                <font>
                    <Font size="27.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="50.0"/>
                </VBox.margin>
            </Text>
            <Text fx:id="lowerTitle" strokeType="OUTSIDE" strokeWidth="0.0">
                <font>
                    <Font size="21.0"/>
                </font>
            </Text>
        </VBox>
    </center>
</BorderPane>
